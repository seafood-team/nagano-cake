<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2><%= @word_for_search.genre_name %>一覧（<%= @search_products.count %>件）</h2>
    </div>
    <div class="col-sm-2 px-sm-0 text-right mb-2">
    </div>
    <div class="row">
      <div class="col-sm-10 px-sm-0 mx-auto mb-5">
        <table class="table text-center admin-items mb-5">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
            <th>ステータス</th>
            </tr>
          </thead>
          <% @search_products.each do |product| %>
            <tbody>
              <tr>
                <td class="align-middle"><%= product.id %></td>
                <td class="align-middle"><%= link_to product_path(product.id) do %>
                  <u><%= product.product_name %></u>
                </td>
                <% end %>
                <td class="align-middle"><%= product.no_tax %></td>
                <td class="align-middle"><%= product.genre.genre_name %></td>
                <td class="align-middle">
                  <% if product.sale_status == true %>
                   <p class="text-success font-weight-bold">販売中</p>
                  <% else %>
                    <p class="text-danger font-weight-bold">販売停止中</p>
                  <% end %>
                </td>
              </tr>
            </tbody>
            <% end %>
        </table>
      <%= paginate @products %>
      </div>
    </div>
</div>