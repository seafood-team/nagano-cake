<table class="genre-table table table-bordered table-hover">
  <thead class="genre-thead">
    <tr>
      <th class="active">ジャンル検索</th>
    </tr>
  </thead>

  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.genre_name, products_path(genre_id: genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>