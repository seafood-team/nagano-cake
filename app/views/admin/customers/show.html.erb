<div class="container">
  <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
  

  <div class="row">
    <div class="col-7">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th scope="row">氏名</th>
            <td><%= @customer.last_name %>&ensp;<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th scope="row">フリガナ</th>
            <td><%= @customer.last_name_kana %>&nbsp;<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th scope="row">郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
           <tr>
            <th scope="row">住所</th>
            <td><%= @customer.city %></td>
          </tr>
           <tr>
            <th scope="row">電話番号</th>
            <td><%= @customer.telephone %></td>
          </tr>
           <tr>
            <th scope="row">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
           <tr>
            <th scope="row">会員ステータス</th>
            <td>
              <% if @customer.is_deleted %>
                <span class="text-secondary font-weight-bold">退会</span>
              <% else %>
                <span class="text-success font-weight-bold">有効</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-5"></div>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
        
        <%= link_to "注文履歴一覧を見る", admin_orders_path(@customer.id), class: "btn btn-primary" %>
      </div>
      </div>
        </div>
      </div>
</div>