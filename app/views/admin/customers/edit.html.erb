<div class="container">
  <h3><%= @cutomer.last_name + @customer.first_name %>の会員情報編集</h3>

  <table>
    <%= form_with model: @customer do |f| %>
    <tr>
      <th>会員ID</th>
      <td><%= customer.id %></td>
    </tr>
     <tr>
      <th>氏名</th>
        <td><%= f.text.field :last_name, autofoucus: true %></td>
        <td><%= f.text.field :first_name, autofoucus: true %></td>
      </tr>
      <tr>
      <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana, autofoucus: true %></td>
        <td><%= f.text_field :first_name_kana, autofaucus: true %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :post_code,autofoucus: true %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :city, autofaucus: true %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone, autofoucus: true %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, autofoucus: true %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= form.radio_button :status, :nomal %>
          <%= form.label :status, "有効", {value: :normal, style: "display: inline-block;"} %>
        </td>
        <td>
          <%= form.radio_button :status, :withdraw %>
          <%= form.label :status, "無効", {value: :withdraw, style: "display: inline-block;"} %>
        </td>
      </tr>
      <%= f.submit "変更を保存" %>
      <% end %>
  </table>
</div>