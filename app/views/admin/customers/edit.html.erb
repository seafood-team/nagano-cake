<div class="container">
  <h3><%= @customer.last_name + @customer.first_name %>の会員情報編集</h3>

  <table>
    <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
     <tr>
      <th>氏名</th>
        <td><%= f.text_field :last_name, autofoucus: true %></td>
        <td><%= f.text_field :first_name, autofoucus: true %></td>
      </tr>
      <tr>
      <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana, autofoucus: true %></td>
        <td><%= f.text_field :first_name_kana, autofaucus: true %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :post_code,autofoucus: true %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :city, autofaucus: true %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone, autofoucus: true %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email, autofoucus: true %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit "変更を保存" %></td>
      </tr>
      <% end %>
  </table>
</div>