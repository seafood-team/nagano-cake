<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col">
      <h2>ジャンル編集</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true do |f| %>
        <%= f.label :genre_name, "ジャンル名" %>
        <%= f.text_field :genre_name, value: @genre.genre_name %>
        <%=f.submit "変更を保存", class:"btn btn-success" %>
        <%= link_to '削除する', admin_genre_path(@genre.id), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-danger"  %>      
        <% end %>
    </div>
  </div>
  
</div>