<div class="container mt-5 mb-5">
	<div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-xs-12 col-sm-6 col-md-6 mx-auto text-right">
     <%= image_tag @product.get_image, size: "150x150" %>
    </div>
   
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <h2><strong><%= @product.product_name %></strong></h2>
      <h4><%= simple_format(@product.introduct)%></h4>
      <%  if @product.sale_status %>
        <p class="text-success">販売中</p>
        <h3>¥ <%= @product.no_tax %> (税込)</h3>
      <% else %>
        <h3 class="text-danger">販売停止中</h3>
      <% end %>
      <%= link_to "編集する", edit_admin_product_path(@product) %>
      </div> 
  </div>
</div>