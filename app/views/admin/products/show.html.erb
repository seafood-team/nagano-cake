<div class="container mt-5 mb-5">
	<div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-xs-12 col-sm-6 col-md-6 mx-auto text-right">
     <%= attachment_image_tag @product, :image, width: "60%", format: "jpeg", fallback: "no_image.jpeg", class:"lb" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <h2><strong><%= @product.name %></strong></h2>
      <h4><%= simple_format(@product.description)%></h4>
      <%  if @product.sales_status == true %>
        <p class="text-success">販売中</p>
        <h3>¥ <%= no_tax( @product.no_tax) %> (税込)</h3>
      <% else %>
        <h3 class="text-danger">販売停止中です</h3>
      <% end %>
      <%= link_to "編集する", edit_admin_product_path, class:"btn btn-success" %>
      </div> 
  </div>
</div>